<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/testProj">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewtest"
        android:layout_above="@+id/addButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/addButton"
        android:background="@drawable/roundedbutton"
        android:layout_alignTop="@+id/subtButton"
        android:layout_alignRight="@+id/textViewtest"
        android:layout_alignEnd="@+id/textViewtest" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/subtButton"
        android:background="@drawable/roundedbutton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textViewtest"
        android:layout_alignStart="@+id/textViewtest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/clrButton"

        android:background="@drawable/roundedbutton"
        android:layout_below="@+id/addButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
